<h1>Listing cards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Card type</th>
    <th>Subtype</th>
    <th>Side</th>
    <th>Faction</th>
    <th>Influence cost</th>
    <th>Card set</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.name %></td>
    <td><%= card.card_type %></td>
    <td><%= card.subtype %></td>
    <td><%= card.side %></td>
    <td><%= card.faction %></td>
    <td><%= card.influence_cost %></td>
    <td><%= card.card_set_id %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

